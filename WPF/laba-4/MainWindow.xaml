<Window x:Class="WpfBaldGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bald Game" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="LetterTextBlock" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="48" FontWeight="Bold"/>
        <TextBox x:Name="WordTextBox" Grid.Row="1" Grid.Column="1" Margin="5" FontSize="24" HorizontalAlignment="Stretch" VerticalAlignment="Center" AcceptsReturn="True" KeyDown="WordTextBox_KeyDown"/>
        <ListBox x:Name="WordsListBox" Grid.Row="2" Grid.Column="1" Margin="5" FontSize="24" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <Button x:Name="StartButton" Grid.Row="2" Grid.Column="0" Margin="5" FontSize="24" Content="Start" Click="StartButton_Click"/>
        <Button x:Name="StopButton" Grid.Row="2" Grid.Column="2" Margin="5" FontSize="24" Content="Stop" Click="StopButton_Click"/>
    </Grid>
</Window>
